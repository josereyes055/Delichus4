<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/base">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Escriba su nombre de usuario"
            android:textSize="@dimen/registro"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/nombre_de_usuario"
            android:background="#fff"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Escriba su e-mail"
            android:textSize="@dimen/registro"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/mail_de_usuario"
            android:background="#fff"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Escriba su contraseña"
            android:textSize="@dimen/registro"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/contrasena1_de_usuario"
            android:background="#fff"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Vuelva a escribir su contraseña"
            android:textSize="@dimen/registro"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/contrasena2_de_usuario"
            android:background="#fff"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:id="@+id/registro"
            android:layout_below="@+id/contrasena2_de_usuario"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:onClick="registro_completo"/>


    </LinearLayout>


</LinearLayout>
