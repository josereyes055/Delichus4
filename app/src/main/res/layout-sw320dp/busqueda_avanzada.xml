<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="40dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Â¿Como quieres buscar?"
            android:id="@+id/textView10"
            android:textStyle="bold"
            android:textSize="@dimen/section_title"
            android:textColor="#ffe1705a"
            android:textIsSelectable="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:text="Por el nombre de la receta"
                    android:textAllCaps="false"
                    android:id="@+id/btnPorNombre"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/botonbusq"
                    android:textSize="@dimen/busqueda_boton"
                    android:textColor="#ffffffff"
                    android:onClick="buscarFiltros"
                    android:paddingRight="50dp"
                    android:textAlignment="gravity"
                    android:gravity="left|center"
                    android:focusable="false"
                    android:paddingLeft="42dp"
                    android:nestedScrollingEnabled="true" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:text="Por filtros"
                    android:textAllCaps="false"
                    android:id="@+id/btnFiltros"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/botonbusq"
                    android:textSize="@dimen/busqueda_boton"
                    android:textColor="#ffffffff"
                    android:onClick="buscarFiltros"
                    android:paddingRight="50dp"
                    android:textAlignment="gravity"
                    android:gravity="left|center"
                    android:focusable="false"
                    android:paddingLeft="42dp"
                    android:nestedScrollingEnabled="true" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:text="Por ingredientes disponibles"
                    android:textAllCaps="false"
                    android:id="@+id/btnIngredientes"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/botonbusq"
                    android:paddingLeft="42dp"
                    android:paddingRight="10dp"
                    android:textColor="#ffffffff"
                    android:gravity="left|center"
                    android:onClick="showDialog"
                    android:textSize="@dimen/busqueda_boton" />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="38">

        </LinearLayout>

    </LinearLayout>


</LinearLayout>