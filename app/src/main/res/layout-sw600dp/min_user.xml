<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fondo"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/contenedor_mini_user"
        android:background="@color/fondo">

        <geekgames.delichus4.customViews.CircleImage
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/follow_imagen"
            android:src="@drawable/cargando_perfil"/>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/logro_imagen">

            <TextView
                android:layout_width="fill_parent"
                android:textSize="@dimen/grid_recipe_autor"
                android:layout_height="wrap_content"
                android:text="@string/usuario"
                android:textColor="@color/naranja"
                android:layout_centerVertical="true"
                android:id="@+id/follow_nombre" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/grid_recipe_titulo"
                android:text="Delichus"
                android:layout_marginLeft="10dp"
                android:textColor="@color/gris_sub"
                android:id="@+id/follow_titulo" />


            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/follow_rating"
                android:layout_marginLeft="10dp"
                style = "?android:attr/ratingBarStyleSmall"
                android:numStars = "5"
                android:isIndicator="true"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>