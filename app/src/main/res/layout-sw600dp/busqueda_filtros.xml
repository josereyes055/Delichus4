<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:paddingBottom="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/gradua"
                android:textColor="@color/naranja"
                android:text="Selecciona"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/gradua"
                android:textColor="@color/gris_sub"
                android:text=" los filtros que quieres usar"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_weight="1"
            android:gravity="center">

            <org.apmem.tools.layouts.FlowLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <geekgames.delichus4.customViews.CustomButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantidad de personas"
                    style="@style/geekgames.delichus4.customViews.CustomButton"
                    android:id="@+id/check_cantidad" />

                <geekgames.delichus4.customViews.CustomButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiempo de Preparación"
                    style="@style/geekgames.delichus4.customViews.CustomButton"
                    android:id="@+id/check_tiempo" />

                <geekgames.delichus4.customViews.CustomButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metodo de cocción"
                    style="@style/geekgames.delichus4.customViews.CustomButton"
                    android:id="@+id/check_coccion" />

                <geekgames.delichus4.customViews.CustomButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Origen"
                        style="@style/geekgames.delichus4.customViews.CustomButton"
                        android:id="@+id/check_origen"
                        android:layout_gravity="center_horizontal" />


                <geekgames.delichus4.customViews.CustomButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredientes"
                    style="@style/geekgames.delichus4.customViews.CustomButton"
                    android:id="@+id/check_ingredientes"
                    android:layout_gravity="center_horizontal" />

                <geekgames.delichus4.customViews.CustomButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de plato"
                    style="@style/geekgames.delichus4.customViews.CustomButton"
                    android:id="@+id/check_tipo"
                    android:layout_gravity="center_horizontal" />

                <geekgames.delichus4.customViews.CustomButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categoría"
                    style="@style/geekgames.delichus4.customViews.CustomButton"
                    android:id="@+id/check_categoria"
                    android:layout_gravity="center_horizontal" />

                <!--CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Autor"
                    android:id="@+id/check_autor"
                    android:layout_gravity="center_horizontal" -->

            </org.apmem.tools.layouts.FlowLayout>

    </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2.5"
            android:text="siguiente"
            android:gravity="center"
            android:onClick="startConfig"
            android:background="@color/verde"
            android:textColor="@color/blanco"
            android:textSize="@dimen/label_siguiente"
            android:id="@+id/btnSelectFiltros"/>


    </LinearLayout>


</LinearLayout>