    android:layout_height="fill_parent"
    android:background="@color/fondo"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cargando..."/>


    <com.etsy.android.grid.StaggeredGridView
