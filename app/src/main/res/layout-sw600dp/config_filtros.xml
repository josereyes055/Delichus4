<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/section_title"
            android:textColor="@color/naranja"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:text="configure los filtros"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:orientation="vertical"
            android:id="@+id/selectorCantidad">

            <TextView
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="¿Cuantas personas son?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <SeekBar
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="22sp"
                    android:id="@+id/numberPersonas"
                    android:text="0"/>

                </LinearLayout>



            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_margin="20dp"
                android:background="@color/gris_claro"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/selectorTiempo">

            <TextView
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="¿Cuanto tiempo tienes?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="22sp"
                    android:id="@+id/numberTiempo"
                    android:text="0"/>

            </LinearLayout>



            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_margin="20dp"
                android:background="@color/gris_claro"/>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/selectorCategoria">

            <TextView
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="¿Qué categoría buscas?"/>



            <org.apmem.tools.layouts.FlowLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                xmlns:f="http://schemas.android.com/apk/res/geekgames.delichus4"
                f:weightDefault="1.0"
                android:id="@+id/flowCategoria"
                >
                </org.apmem.tools.layouts.FlowLayout>



            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_margin="20dp"
                android:background="@color/gris_claro"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/selectorTipo">

                <TextView
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="¿Qué Tipo de plato buscas?"/>

                <org.apmem.tools.layouts.FlowLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    xmlns:f="http://schemas.android.com/apk/res/geekgames.delichus4"
                    f:weightDefault="1.0"
                    android:orientation="horizontal"
                    android:id="@+id/flowTipo"
                    >
                </org.apmem.tools.layouts.FlowLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_margin="20dp"
                android:background="@color/gris_claro"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/selectorIngredientes">


            <TextView
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="22sp"
                android:text="¿Qué ingrediente buscas?"/>

            <org.apmem.tools.layouts.FlowLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/flowIngredientes"
                xmlns:f="http://schemas.android.com/apk/res/geekgames.delichus4"
                f:weightDefault="1.0"
                >
            </org.apmem.tools.layouts.FlowLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_margin="20dp"
                android:background="@color/gris_claro"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/selectorCoccion">



            <TextView
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="22sp"
                android:text="¿Qué tipo de cocción buscas?"/>

            <org.apmem.tools.layouts.FlowLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                xmlns:f="http://schemas.android.com/apk/res/geekgames.delichus4"
                f:weightDefault="1.0"
                android:orientation="horizontal"
                android:id="@+id/flowCoccion"
                >
            </org.apmem.tools.layouts.FlowLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_margin="20dp"
                android:background="@color/gris_claro"/>

        </LinearLayout>


