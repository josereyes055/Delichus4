<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>

    </style>


    <style name="RecipeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="customButtonStyle">@style/geekgames.delichus4.customViews.CustomButton</item>
    </style>

    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>

    <declare-styleable name="CustomButton">
        <attr name="customAttr" format="string"/>
    </declare-styleable>



    <style name="geekgames.delichus4.customViews.CustomButton"  parent="android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/custom_button</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:background">@drawable/custom_button_shape</item>

    </style>



</resources>
